{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "noEmit": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "lib": ["es2023"],
    "types": ["node", "jest"],
    "resolveJsonModule": true
  }
}
