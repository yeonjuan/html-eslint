{
  "name": "@html-eslint/html-eslint",
  "version": "0.4.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "turbo run test",
    "lint": "turbo run lint",
    "ts": "turbo run ts",
    "spell-check": "cspell --gitignore --config .cspell.json \"**/*.{js,ts,tsx,md}\"",
    "format": "prettier --write .",
    "format-check": "prettier --list-different .",
    "dev": "turbo run dev --no-cache",
    "build": "turbo run build",
    "publish-website": "npm run build && gh-pages -d packages/website/out -t true",
    "publish": "lerna publish",
    "publish:alpha": "lerna publish --dist-tag alpha",
    "check:all": "npm run test && npm run format-check && npm run spell-check && npm run ts",
    "docs": "turbo run docs --no-cache && rm -rf .parcel-cache"
  },
  "author": "yeonjuan",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.10.1",
    "cspell": "^6.19.2",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^27.3.1",
    "lerna": "^6.0.3",
    "prettier": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0",
    "npm": ">=7"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run check:all"
    }
  },
  "workspaces": [
    "packages/**"
  ]
}
