{
  "name": "@html-eslint/html-eslint",
  "version": "0.4.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "lerna run test --stream",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "check:ts": "lerna run check:ts",
    "check:format": "prettier --list-different .",
    "bootstrap": "lerna bootstrap",
    "test:all": "npm run check:ts && npm run check:format && npm run lint && npm run test"
  },
  "author": "yeonjuan",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^27.3.1",
    "lerna": "^6.0.3",
    "prettier": "^2.4.1",
    "turbo": "^1.6.3",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check:format",
      "pre-push": "npm run test && npm run check:format"
    }
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
