{
  "name": "@html-eslint/html-eslint",
  "version": "0.4.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "publish": "lerna publish",
    "publish:alpha": "lerna publish --dist-tag alpha",
    "check:ts": "turbo run ts",
    "check:format": "prettier --check .",
    "check:spell": "cspell --config .cspell.json \"**/*.{js,ts,tsx,md,html}\" --quiet",
    "check": "yarn test && yarn check:format && yarn check:spell && yarn check:ts",
    "publish:website": "yarn workspace website deploy"
  },
  "author": "yeonjuan",
  "license": "MIT",
  "devDependencies": {
    "cspell": "^8.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^27.3.1",
    "lerna": "^6.0.3",
    "prettier": "^2.4.1",
    "turbo": "^1.11.3",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0",
    "npm": ">=7"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn check"
    }
  },
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "packages/**"
  ]
}
